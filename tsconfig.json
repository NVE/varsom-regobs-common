{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@varsom-regobs-common/core": [
        "dist/varsom-regobs-common/core"
      ],
      "@varsom-regobs-common/core/*": [
        "dist/varsom-regobs-common/core/*"
      ],
      "@varsom-regobs-common/regobs-api": [
        "dist/varsom-regobs-common/regobs-api"
      ],
      "@varsom-regobs-common/regobs-api/*": [
        "dist/varsom-regobs-common/regobs-api/*"
      ],
      "@varsom-regobs-common/registration": [
        "dist/varsom-regobs-common/registration"
      ],
      "@varsom-regobs-common/registration/*": [
        "dist/varsom-regobs-common/registration/*"
      ]
    }
  },
  "exclude": [
    "dist"
  ]
}